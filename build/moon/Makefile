ifndef config
  config=debug_linux
endif

ifndef verbose
  SILENT = @
endif

.PHONY: clean prebuild prelink

ifeq ($(config),debug_linux)
  RESCOMP = windres
  TARGETDIR = ../../bin/Debug
  TARGET = $(TARGETDIR)/moon-d
  OBJDIR = ../../obj/moon/linux_Debug
  DEFINES += -DDEBUG -DSOL_CHECK_ARGUMENTS
  INCLUDES += -I../.. -I../../moon -I../../core -I../../third -I../../clib
  FORCE_INCLUDE +=
  ALL_CPPFLAGS += $(CPPFLAGS) -MMD -MP $(DEFINES) $(INCLUDES)
  ALL_CFLAGS += $(CFLAGS) $(ALL_CPPFLAGS) -g
  ALL_CXXFLAGS += $(CXXFLAGS) $(ALL_CFLAGS) -std=c++14
  ALL_RESFLAGS += $(RESFLAGS) $(DEFINES) $(INCLUDES)
  LIBS += -Wl,--start-group -llua53 -lcore-d -lrapidjson -lprotobuf -ldl -lpthread -Wl,--end-group
  LDDEPS += ../../bin/Debug/liblua53.a ../../bin/Debug/libcore-d.a ../../bin/Debug/librapidjson.a ../../bin/Debug/libprotobuf.a
  ALL_LDFLAGS += $(LDFLAGS) -L../../libs -L../../bin/Debug -Wl,-rpath=./
  LINKCMD = $(CXX) -o "$@" $(OBJECTS) $(RESOURCES) $(ALL_LDFLAGS) $(LIBS)
  define PREBUILDCMDS
  endef
  define PRELINKCMDS
  endef
  define POSTBUILDCMDS
  endef
all: $(TARGETDIR) $(OBJDIR) prebuild prelink $(TARGET)
	@:

endif

ifeq ($(config),release_linux)
  RESCOMP = windres
  TARGETDIR = ../../bin/Release
  TARGET = $(TARGETDIR)/moon
  OBJDIR = ../../obj/moon/linux_Release
  DEFINES += -DNDEBUG -DSOL_CHECK_ARGUMENTS
  INCLUDES += -I../.. -I../../moon -I../../core -I../../third -I../../clib
  FORCE_INCLUDE +=
